<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_selectaudio"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FF0055"
        android:text="Select Audio"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_selectvideo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#0055FF"
        android:text="Select Video"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_selectpic"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_selectaudio"
        android:layout_below="@+id/button_selectaudio"
        android:layout_marginTop="10dp"
        android:background="#55FF99"
        android:text="Select Picture" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_selectpic"
        android:layout_alignRight="@+id/button_selectpic"
        android:layout_below="@+id/button_selectpic"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:text="Upload"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/imageView_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/uploadButton"
        android:layout_alignLeft="@+id/button_selectvideo"
        android:layout_alignRight="@+id/button_selectvideo"
        android:layout_alignTop="@+id/button_selectpic"
        android:scaleType="centerCrop"
      />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadButton"
        android:layout_below="@+id/uploadButton"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>